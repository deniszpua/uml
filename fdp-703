@startuml
Persist "1" o-- "1" PriorityQueue
PriorityQueue "1" o-- "0..n" Request
Persist "1" *-- "1" RequestFactory : createRequest()
RequestFactory .. Request

class Persist {
+ PriorityQueue request_queue
+ httpJsonRequest()
+ clearRequestQueue()
+ shutdown()
}

class RequestFactory {
+ Request createRequest(params)
+ void init()
+ resetAuthentication()
+ auth_token
+ user_id
- request_counter
}

class PriorityQueue {
+ PriorityQueue new()
+ void addRequest()
+ void clearQueue()
+ void shutdown()
+ List<Request> queue
}

class Request {
+ Request new()
+ is_blocking
+ priority
+ url
+ is_finished
+ handler
+ timeout
+ max_retry_attempts
+ retry_attempts
+ void doRequest()
+ void destroy()
}
@enduml
